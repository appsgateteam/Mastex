<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <data>

        
        
        
        <template id="mastex_invoice_report">
            <t t-call="web.external_layout_boxed">
           <style type="text/css">
            
              /* United */
              @font-face {
                font-family: 'Calibri Regular';
                font-style: heavy;
                font-weight: 400;
                src: url(/home/ubuntu/.fonts/Calibri Regular.ttf) format('truetype');
              }

              
              @font-face {
                font-family: 'Calibri Bold';
                font-style: heavy;
                font-weight: 400;
                src: url(/home/ubuntu/.fonts/Calibri Bold.TTF) format('truetype');
              }
              
            </style>

            
           
      

            <!-- <t t-call="custom_external_layout"> -->

                
           
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <div style="float: right;" >
                <br></br>
                <br></br>
                    <div class="text-right">
                        <span t-field="o.partner_id.name"/><br></br>
                        <!-- <span t-field="o.partner_id.street"/><br></br>
                        <span t-field="o.partner_id.city"/><br></br>
                        <span t-field="o.partner_id.country_id"/><br></br>
                        <span t-field="o.partner_id.phone"/><br></br>      
                        <span t-field="o.partner_id.email"/><br></br>
                        <span t-field="o.partner_id.website"/><br></br>
                        <div t-if="o.partner_id.vat" class="mt16">
                                    <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                                    <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/></div> -->
                    </div>

                    


                    <h5>
                        <br></br>
                        <br></br>

                        <span class="text-nowrap" t-if="o.type == 'out_invoice' and o.state == 'posted'"><span style="font-size:18px; float: right;">: Invoice /رقم الفاتورة</span></span>
                        <span class="text-nowrap" t-if="o.type == 'out_invoice' and o.state == 'draft'"><span style="float: right;">: Draft Invoice/رقم الفاتورة</span></span>
                        <span class="text-nowrap" t-if="o.type == 'out_invoice' and o.state == 'cancel'"><span style="float: right;">: Cancelled Invoice/رقم الفاتورة</span></span>
                        <span class="text-nowrap" t-if="o.type == 'out_refund'"><span style="float: right;">: Credit Note/رقم الفاتورة</span></span>
                        <span class="text-nowrap" t-if="o.type == 'in_refund'"><span style="float: right;">: Vendor Credit Note/رقم الفاتورة</span></span>
                        <span class="text-nowrap" t-if="o.type == 'in_invoice'"><span style="float: right;">: Vendor Bill/رقم الفاتورة</span></span>
                        <span class="text-nowrap" t-if="o.name != '/'" t-field="o.name"/>
                        <br/>
                        <br/>
                        <span class="text-nowrap" style="font-size:18px; float: right;">   : Carton / عدد الطرود</span><br/>
                        <br/>
                        <span class="text-nowrap" t-field="o.amount_total"/><span style="font-size:18px; float: right;">  : Amount Due / المبلغ المطلوب</span><br/>
                        <br/>
                        <span class="text-nowrap" t-field="o.invoice_date"/><span style="font-size:18px; float: right; " class="text-nowrap">: Invoice / تاريخ الفاتورة</span><br/>
                        <br/>
                        <br/>
                        
                        
                    </h5>
                    
                </div>
                
            <div class="page_mastex">
                

                  
                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <table style="border-bottom: 1px solid black;width: 100%;" name="invoice_line_table">
                        <thead>
                            <tr>
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="6"/>
                                <th name="th_description" class="text-center"><span style="font-size:14px;">Product/الخامة</span></th>
                                <!-- TODO: remove in master -->
                                <th name="th_source" class="d-none text-left" t-if="0"><span style="font-size:14px;">Source Document</span></th>
                                <th name="th_quantity" class="text-center"><span style="font-size:14px;">Quantity/الكمية</span></th>
                                <th name="th_quantity" class="text-center"><span style="font-size:14px;">Uint/الوحدة</span></th>
                                <th name="th_priceunit" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span style="font-size:14px;">Unit Price/سعر الوحدة</span></th>
                                <th name="th_price_unit" t-if="display_discount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span style="font-size:14px;">Disc.%/الحسم</span>
                                    <!-- TODO: remove in master -->
                                    <t t-set="colspan" t-value="colspan+1"/>
                                </th>
                                <!-- <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span style="font-size:14px;">Taxes/الخصم</span></th> -->
                                <th name="th_subtotal" class="text-center">
                                    <span groups="account.group_show_line_subtotals_tax_excluded" style="font-size:14px;">Amount/القيمة</span>
                                    <span groups="account.group_show_line_subtotals_tax_included" style="font-size:14px;">Total Price/السعر الكلي</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                        <td class="text-center">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td class="text-center">
                                            <!-- add unit -->
                                                <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                           
                                        </td>
                                        <td t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.discount"/>
                                        </td>
                                        <!-- <td t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                        </td> -->
                                        <td class="text-center o_price_total">
                                            <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-center">
                                        <td colspan="99">
                                            <strong class="mr16" style="font-size:14px;">Subtotal/قيمة الفاتورة</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    </div>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">
                                    <tr class=" o_subtotal" style="">
                                        <td><strong style="font-size:14px;">TOTAL/قيمة الفاتورة:</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <tr class=" o_subtotal" style="">
                                        <td><strong>Currency Charge	/فرق العملة:</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.currency_charge"/>
                                        </td>
                                    </tr>
                                    <tr class=" o_subtotal" style="">
                                        <td><strong style="font-size:14px;">Bank Charge	/ مصاريف الحوالة - 100 درهم:</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.bank_charge_currency"/>
                                        </td>
                                    </tr>
                                    

                                    <tr class=" o_subtotal" style="">
                                        <td style="font-size:14px;">Total Due/ الاجمالي المطلوب:</td>
                                        <td class="text-right">
                                            <span t-field="o.amount_residual"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <br></br>
                    <br></br>
                    
                   
           </t>
        </template>

