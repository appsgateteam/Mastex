        <template id="mastex_invoice_report">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <div style="float: right;" >

                    <span t-field="o.partner_id.name"/><br></br>
                    <span t-field="o.partner_id.street"/><br></br>
                    <span t-field="o.partner_id.city"/><br></br>
                    <span t-field="o.partner_id.country_id"/><br></br>
                    <span t-field="o.partner_id.phone"/><br></br>      
                    <span t-field="o.partner_id.email"/><br></br>
                    <span>VAT:<span t-field="o.partner_id.vat"/></span><br></br>
                    <span t-field="o.partner_id.website"/><br></br>
                    <div t-if="o.partner_id.vat" class="mt16">
                                <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                                <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/></div>
                    <h5>
                        <br></br>
                        
                        <span t-if="o.type == 'out_invoice' and o.state == 'posted'"><span style="float: right;">: Invoice/رقم الفاتورة</span></span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'"><span style="float: right;">: Draft Invoice/رقم الفاتورة</span></span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'"><span style="float: right;">: Cancelled Invoice/رقم الفاتورة</span></span>
                        <span t-if="o.type == 'out_refund'"><span style="float: right;">: Credit Note/رقم الفاتورة</span></span>
                        <span t-if="o.type == 'in_refund'"><span style="float: right;">: Vendor Credit Note/رقم الفاتورة</span></span>
                        <span t-if="o.type == 'in_invoice'"><span style="float: right;">: Vendor Bill/رقم الفاتورة</span></span>
                        <span t-if="o.name != '/'" t-field="o.name"/><br></br>
                        <span t-field="o.invoice_date"/><span style="float: right;" >     : Carton/عدد الطرود</span><br></br>
                        <span class="text-nowrap" t-field="o.amount_total"/><span style="float: right;">  : Amount Due/المبلغ المطلوب</span><br></br>
                        <span class="text-nowrap" t-field="o.invoice_date"/><span style="float: right;">: Amount Due/ تاريخ الفاتورة</span><br></br>
                        <br></br>
                        <br></br>
                    </h5>
                    
                </div>
