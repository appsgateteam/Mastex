<odoo>
    <data>
        <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
            <xpath expr="//t/t/div[hasclass('page')]/div[@id='informations']" position="after">
                <div class="row mt32 mb32">
                    <div t-if="doc.shipment" class="col-auto mw-100 mb-2">
                        <strong>Shipment:</strong>
                        <p class="m-0" t-field="doc.shipment"/>
                    </div>
                    <div t-if="doc.payment" class="col-auto mw-100 mb-2">
                        <strong>Payment:</strong>
                        <p class="m-0" t-field="doc.payment"/>
                    </div>
                    <div t-if="doc.insurance_id" class="col-auto mw-100 mb-2">
                        <strong>Insurance:</strong>
                        <p class="m-0" t-field="doc.insurance_id"/>
                    </div>
                    <div t-if="doc.destination_id" class="col-auto mw-100 mb-2">
                        <strong>Destination:</strong>
                        <p class="m-0" t-field="doc.destination_id"/>
                    </div>
                    <div t-if="doc.marks_id" class="col-auto mw-100 mb-2">
                        <strong>Marks:</strong>
                        <p class="m-0" t-field="doc.marks_id"/>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>