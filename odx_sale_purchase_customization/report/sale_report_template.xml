<odoo>
    <data>
        <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
            <xpath expr="//t/t/div[hasclass('page')]/div[@id='informations']" position="after">
                <div class="row mt32 mb32">
                    <div t-if="doc.shipment" class="col-auto mw-100 mb-2">
                        <strong>Shipment:</strong>
                        <p class="m-0" t-field="doc.shipment"/>
                    </div>
                    <div t-if="doc.payment" class="col-auto mw-100 mb-2">
                        <strong>Payment:</strong>
                        <p class="m-0" t-field="doc.payment"/>
                    </div>
                    <div t-if="doc.insurance_id" class="col-auto mw-100 mb-2">
                        <strong>Insurance:</strong>
                        <p class="m-0" t-field="doc.insurance_id"/>
                    </div>
                    <div t-if="doc.destination_id" class="col-auto mw-100 mb-2">
                        <strong>Destination:</strong>
                        <p class="m-0" t-field="doc.destination_id"/>
                    </div>
                    <div t-if="doc.marks" class="col-auto mw-100 mb-2">
                        <strong>Marks:</strong>
                        <p class="m-0" t-field="doc.marks"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//table[1]/thead/tr/th[@name='th_quantity']" position="after">
                <th name="th_actual_quantity" class="text-right">Actual Quantity</th>
            </xpath>
            <xpath expr="//table[1]/tbody/t/tr/t/td[@name='td_quantity']" position="after">
                <td name="td_actual_quantity" class="text-right">
                    <span t-field="line.actual_qty"/>
                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                </td>
            </xpath>
            <xpath expr="//t" position="inside">
                <t t-foreach="doc.attachment_ids" t-as="attachment">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <span t-field="attachment.datas"
                                  t-options='{"widget": "image"}'/>
                        </div>
                    </t>
                </t>
            </xpath>
        </template>
    </data>
</odoo>