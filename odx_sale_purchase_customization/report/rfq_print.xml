<odoo>
    <data>
        <template id="report_purchasequotation_document_inherit"
                  inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="//t/t/div[hasclass('page')]/table" position="before">
                <div class="row mt32 mb32">
                    <div t-if="o.shipment" class="col-auto mw-100 mb-2">
                        <strong>Shipment:</strong>
                        <p class="m-0" t-field="o.shipment"/>
                    </div>
                    <div t-if="o.payment" class="col-auto mw-100 mb-2">
                        <strong>Payment:</strong>
                        <p class="m-0" t-field="o.payment"/>
                    </div>
                    <div t-if="o.insurance_id" class="col-auto mw-100 mb-2">
                        <strong>Insurance:</strong>
                        <p class="m-0" t-field="o.insurance_id"/>
                    </div>
                    <div t-if="o.destination_id" class="col-auto mw-100 mb-2">
                        <strong>Destination:</strong>
                        <p class="m-0" t-field="o.destination_id"/>
                    </div>
                    <div t-if="o.marks_id" class="col-auto mw-100 mb-2">
                        <strong>Marks:</strong>
                        <p class="m-0" t-field="o.marks_id"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//table[1]/thead/tr/th[3]" position="after">
                <th name="th_actual_quantity" class="text-right">Actual Quantity</th>
                <th name="th_images" class="text-right">Images</th>
            </xpath>
            <xpath expr="//table[1]/tbody/t/tr/t/td[3]" position="after">
                <td name="td_actual_quantity" class="text-right">
                    <span t-field="order_line.actual_qty"/>
                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                </td>
                <td name="td_attchment" class="text-right">
                    <t t-foreach="order_line.attachment_ids" t-as="attachment">
                        <span t-field="attachment.datas"
                              t-options='{"widget": "image", "style":"width: 50px;height: 50px"}'/>
                    </t>
                </td>
            </xpath>
        </template>
    </data>
</odoo>