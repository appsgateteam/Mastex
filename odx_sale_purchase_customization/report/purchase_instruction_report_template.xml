<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="purchase_instruction_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <table width="100%" height="100">
                                <tr>
                                    <th>
                                        <u>Order No</u>
                                    </th>
                                    <td>
                                        <span t-field="o.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <u>Maker</u>
                                    </th>
                                    <td>
                                        <span t-field="o.partner_id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <u>TOTAL</u>
                                    </th>
                                    <td>
                                        <t t-set="qty" t-value="0"/>
                                        <t t-foreach="o.order_line" t-as="line">
                                            <t t-set="qty" t-value="qty+line.product_qty"/>
                                        </t>
                                        <span t-esc="qty"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <u>Date</u>
                                    </th>
                                    <td>
                                        <span t-field="o.date_order"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <u>SHIPMENT</u>
                                    </th>
                                    <td>
                                        <span t-field="o.shipment_date"/>-<span t-field="o.destination_id"/>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <h4 style="color: #FF0000;">
                                <u>Color Instructions:</u>
                            </h4>
                            <span t-field="o.colour_instructions"/>
                            <br/>
                            <br/>
                            <h4>
                                <u>PACKING:</u>
                            </h4>
                            <span t-field="o.packing"/>
                            <br/>
                            <h2>
                                <u>FACE STAMP ON PAPER AND BOOKLET:</u>
                            </h2>
                            <h3 t-field="o.face_stamp"/>
                            <br/>
                                <u >SELVEDGE:</u>
                                <span t-field="o.selvedge"/>
                            <br/>
                                <u >Shipping Mark:</u>
                            <span t-field="o.shipping_mark"/>
                            <br/>
                            <br/>
                                <u >Shipping Sample book:</u>
                                <span t-field="o.shipping_sample_book"/>
                            <br/>
                                <u>Notes:</u>
                            <h5 t-field="o.notes"/>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>

