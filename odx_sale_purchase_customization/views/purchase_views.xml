<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit Purchase Order Form View to Modify it -->
        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">odox.purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group" position="inside">
                    <group>
                        <field name="customer_id" widget="res_partner_many2one"
                               context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}"
                               options="{&quot;always_reload&quot;: True}"
                               attrs="{'readonly': [('state', 'in', ('purchase', 'done', 'cancel'))],'required': True}"
                               domain="[('customer_rank','=',1)]"/>
                        <field name="sale_order_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="sequence_no" readonly="1"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('supplier_rank','=',1)]</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_qty']" position="after">
                    <field name="actual_qty" />
                </xpath>

                <xpath expr="//field[@name='order_line']/tree//field[@name='qty_received']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                 <xpath expr="//field[@name='order_line']/tree//field[@name='product_qty']" position="attributes">
                    <attribute name="string">Contract Quantity</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='product_qty']" position="attributes">
                    <attribute name="string">Contract Quantity</attribute>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Bill Of Landings" name="bill_of_landings">
                        <field name="landing_line_ids">
                            <tree editable="bottom">
                                <field name="landing_date"/>
                                <field name="landing_company"/>
                                <field name="name"/>
                                <field name="landing_amount"/>
                                <field name="landing_attachment"/>
                                <field name="landing_attachment_name" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>