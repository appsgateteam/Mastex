<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit Purchase Settings View to Modify it -->
        <record id="res_config_settings_view_form_purchase_inherit" model="ir.ui.view">
            <field name="name">odox.res.config.settings.view.form.inherit.purchase</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='purchase']" position="inside">
                    <h2>Commission</h2>
                    <div class="row mt16 o_settings_container" id="bank_cash">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label for="commission_product_id"/>
                                    <div class="text-muted">
                                        Taken as commission product while creating vendor bill from purchase order
                                    </div>
                                    <field name="commission_product_id"/>
                                </div>
                            </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>