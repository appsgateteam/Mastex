<?xml version="1.0"?>
<odoo>

        <record id="partner_balance_report_form" model="ir.ui.view">
            <field name="name">partner.balance.report.form</field>
            <field name="model">partner.balance.report</field>
            <field name="arch" type="xml">
                <form string="Generate Partner Balance">
                    <h2>Create Partner Balance Report</h2>
                    <group>
                        <group>
                            <field name="start_date" />
                         </group>
                        <group> 
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="partner_ids" widget="many2many_tags" options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}"/>
                    </group>
                    <footer>
						<button name="get_report" string="Print" type="object" class="btn-primary"/>
						<button string="Cancel" class="btn-default" special="cancel"/>
					</footer>		
				</form>
            </field>
        </record>

        <!-- <record id="job_costing_report_action" model="ir.actions.act_window">
            <field name="name">Job Costing Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">job.costing.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="job_costing_report_form"/>
            <field name="target">new</field>
        </record> -->
    
        <act_window id="partner_balance_report_action"
                    name="Partner Balance Report"
                    res_model="partner.balance.report"
                    view_mode="form"
                    target="new"/>

        <menuitem
            id="partner_balance_report_action_config"
            name="Partner Balance"
            parent = "account.menu_finance_reports"
            action="partner_balance_report_action"
            sequence="100"/>

</odoo>
